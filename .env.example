# Supabase (CRITICAL - Required for all functionality)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
DATABASE_URL=postgresql://connection_string

# ============================================
# OPENAI MODEL CONFIGURATION
# ============================================

# Feature flag for GPT-5 rollout
USE_GPT5=false              # Set to true to enable GPT-5

# Model selection (when USE_GPT5=true)
OPENAI_MODEL=gpt-5          # Primary model - MUST be gpt-5 not gpt-5o
OPENAI_FAST_MODEL=gpt-5-mini    # Fast model for document processing
OPENAI_FALLBACK_MODEL=gpt-4o    # Fallback if primary fails

# CRITICAL: Never use gpt-5o - it doesn't exist
# Valid models: gpt-5, gpt-5-mini, gpt-4o, gpt-4o-mini

# When USE_GPT5=false, uses:
# - gpt-4o (primary)
# - gpt-4o-mini (fast)

# Debug logging
DEBUG_MODELS=false          # Set to true for detailed model logging

# ============================================
# REQUIRED OPENAI CONFIGURATION
# ============================================
OPENAI_API_KEY=sk-...       # Your OpenAI API key (required)

# Legacy configuration (keep for compatibility)
OPENAI_DEFAULT_MODEL=
OPENAI_ANALYSIS_MODEL=
OPENAI_USE_ANALYSIS=false
OPENAI_PRICING_JSON={"models":{"DEFAULT":{"input":0.0,"output":0.0},"ANALYSIS":{"input":0.0,"output":0.0}}}

# Sentry (Error Monitoring)
NEXT_PUBLIC_SENTRY_DSN=https://47996feeefcc46d6d6bb4ad64cd12443@o4509724018409472.ingest.us.sentry.io/4509724031516672
SENTRY_ORG=disrvpt-llc
SENTRY_PROJECT=javascript-nextjs
SENTRY_AUTH_TOKEN=your-auth-token
# Suppress Sentry instrumentation warnings during development
SENTRY_SUPPRESS_INSTRUMENTATION_FILE_WARNING=1
SENTRY_DISABLE_AUTO_INSTRUMENTATION=1
SENTRY_SUPPRESS_GLOBAL_ERROR_HANDLER_FILE_WARNING=1

# Feature Flags
NEXT_FEATURE_SETTINGS=true

# Document Processing
DOC_MAX_PAGES=80
USE_CANVAS=false
INGEST_MODE=memory

# File Upload Limits
MAX_UPLOAD_MB=8  # Maximum file size for in-memory PDF processing (default: 8MB)
NEXT_PUBLIC_MAX_UPLOAD_MB=8  # Client-side file size limit (must match MAX_UPLOAD_MB)
PDF_MAX_BYTES=8388608  # Legacy - use MAX_UPLOAD_MB instead

# Transient Storage
TRANSIENT_STORE_TTL_MS=900000
TRANSIENT_STORE_MAX_CONTEXTS=100
ALLOW_CHAT_WITHOUT_CONTEXT=false