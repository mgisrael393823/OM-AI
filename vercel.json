{
  "framework": "nextjs",
  "regions": ["iad1"],
  "installCommand": "pnpm install --frozen-lockfile",
  "build": {
    "env": {
      "VERCEL_AUTO_POLLUTE": "1"
    }
  },
  "redirects": [
    {
      "source": "/old-path",
      "destination": "/new-path",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "cache-control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*)\\.html",
      "headers": [
        {
          "key": "cache-control", 
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false,
  "functions": {
    "src/pages/api/chat.ts": {
      "memory": 1024,
      "maxDuration": 30
    },
    "src/pages/api/blob/upload.ts": {
      "memory": 1536,
      "maxDuration": 60
    },
    "src/pages/api/process-pdf-fast.ts": {
      "memory": 2048,
      "maxDuration": 60
    },
    "src/pages/api/chat-conversational.ts": {
      "memory": 1536,
      "maxDuration": 60
    },
    "src/pages/api/process-document.ts": {
      "memory": 2048,
      "maxDuration": 60
    },
    "src/pages/api/process-pdf-memory.ts": {
      "memory": 2048,
      "maxDuration": 60
    },
    "src/pages/api/upload.ts": {
      "memory": 1536,
      "maxDuration": 60
    }
  }
}